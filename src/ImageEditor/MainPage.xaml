<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ImageEditor"
             xmlns:vm="clr-namespace:ImageEditor.ViewModels"
             x:Class="ImageEditor.MainPage">
    <ContentPage.Resources>
        <vm:MainViewModel x:Key="mainViewModel"></vm:MainViewModel>
    </ContentPage.Resources>
    <Grid x:Name="main"
          BindingContext="{StaticResource mainViewModel}"
          BackgroundColor="{StaticResource MainColor}">
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="7*"/>
			<RowDefinition Height="2*"/>
		</Grid.RowDefinitions>
        <StackLayout Grid.Row="0"
                     Padding="8,0,0,0"
                     BackgroundColor="{Binding Source={StaticResource EdgeWhiteColor}}" Orientation="Horizontal">
            <Button Style="{StaticResource ToolButtonStyle}"
                    Command="{Binding PickImageCommand}"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"></Button>
            <Button Style="{StaticResource ToolButtonStyle}"
                    Command="{Binding TakeImageCommand}"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"></Button>
        </StackLayout>
        <ContentView Grid.Row="1">
            <Image Source="{Binding Image}"
                   HorizontalOptions="CenterAndExpand"
                   VerticalOptions="CenterAndExpand"></Image>
        </ContentView>
        
        <ScrollView Grid.Row="2"
                    VerticalScrollBarVisibility="Never"
                    HorizontalScrollBarVisibility="Always"
                    BackgroundColor="{StaticResource EdgeWhiteColor}">
            <StackLayout Orientation="Horizontal"
                         VerticalOptions="CenterAndExpand">
                <Button Style="{StaticResource OptionsButtonStyle}"
                    Text="1"></Button>
                <Button Style="{StaticResource OptionsButtonStyle}"
                    Text="2"></Button>
                <Button Style="{StaticResource OptionsButtonStyle}"
                    Text="3"></Button>
                <Button Style="{StaticResource OptionsButtonStyle}"
                    Text="4"></Button>
                <Button Style="{StaticResource OptionsButtonStyle}"
                    Text="5"></Button>
                <Button Style="{StaticResource OptionsButtonStyle}"
                    Text="6"></Button>
                <Button Style="{StaticResource OptionsButtonStyle}"
                    Text="7"></Button>
                <Button Style="{StaticResource OptionsButtonStyle}"
                    Text="8"></Button>
                <Button Style="{StaticResource OptionsButtonStyle}"
                    Text="9"></Button>
            </StackLayout>
        </ScrollView>
    </Grid>

</ContentPage>

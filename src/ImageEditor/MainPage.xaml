<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ImageEditor"
             xmlns:views="clr-namespace:ImageEditor.Views"
             xmlns:converters="clr-namespace:ImageEditor.Converters"
             xmlns:vm="clr-namespace:ImageEditor.ViewModels"
             x:Class="ImageEditor.MainPage">
    <ContentPage.Resources>
        <vm:MainViewModel x:Key="mainViewModel"></vm:MainViewModel>
        <converters:StreamToImageSourceConverter x:Key="streamToImageConverter"></converters:StreamToImageSourceConverter>
    </ContentPage.Resources>
    <Grid x:Name="main"
          BindingContext="{StaticResource mainViewModel}"
          BackgroundColor="{StaticResource MainColor}">
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="7*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="2*"/>
		</Grid.RowDefinitions>
        <StackLayout Grid.Row="0"
                     Padding="8,0,0,0"
                     BackgroundColor="{Binding Source={StaticResource EdgeWhiteColor}}" Orientation="Horizontal">
            <Button Style="{StaticResource ToolButtonStyle}"
                    Command="{Binding PickImageCommand}"></Button>
            <Button Style="{StaticResource ToolButtonStyle}"
                    Command="{Binding TakeImageCommand}"></Button>
        </StackLayout>
        <ContentView Grid.Row="1">
            <Image x:Name="canvas" Source="{Binding Image, Converter={StaticResource streamToImageConverter}}"
                   HorizontalOptions="CenterAndExpand"
                   VerticalOptions="CenterAndExpand"></Image>
        </ContentView>
        <ContentView Grid.Row="2"
                     BackgroundColor="Wheat"
                     HorizontalOptions="Fill"
                     HeightRequest="64"
                     IsVisible="{Binding IsEditMode}"
                     Content="{Binding CurrentEditView}">
            
        </ContentView>
        <ScrollView Grid.Row="3"
                    Margin="0,-6,0,0"
                    VerticalScrollBarVisibility="Never"
                    HorizontalScrollBarVisibility="Default"
                    BackgroundColor="{StaticResource EdgeWhiteColor}">
            <StackLayout Orientation="Horizontal">
                <Button Style="{StaticResource OptionsButtonStyle}"
                        Text="R"
                        Command="{Binding RotateImageCommand}"
                        CommandParameter="{Binding ImageStream}"></Button>
            </StackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
